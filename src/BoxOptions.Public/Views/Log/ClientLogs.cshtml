
@model BoxOptions.Public.ViewModels.ClientLogsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<html>
    <body>
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.StartDate)
                    @Html.EditorFor(m => m.StartDate)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.EndDate)
                    @Html.EditorFor(m => m.EndDate)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Client)
                    @Html.DropDownListFor(m => m.Client, new SelectList(Model.ClientList))
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Download Logs" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
       
    </body>
</html>